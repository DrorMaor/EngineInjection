<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@color/blau</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="TextEdit">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="borderRound">10dp</item>
        <item name="borderWidth">2dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:width">250dp</item>
        <item name="android:height">250dp</item>
        <item name="android:ems">15</item>
    </style>

    <style name="EngineInjection">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">18dp</item>
    </style>

</resources>